---
const { title, img, desc, url, badge, tags, message, datatags, target = "_blank"} = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
---

<div
  class="horizontal-card rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
  data-tags={datatags}
>
  {url ? (
    <a href={url} target={target} rel="noopener noreferrer"> 
      <div class="hero-content flex-col md:flex-row">
        {
          img && (
            <Image
              src={img}
              width={750}
              height={422}
              format="webp"
              alt={title}
              class="max-w-full md:max-w-[13rem] rounded-lg"
            />
          )
        }
        <div class="grow w-full">
          <h1 class="text-xl font-bold">
            {title}
            {badge && <div class="badge badge-primary badge-outline mx-2">ğŸ•°ï¸ {badge}</div>}
          </h1>
          <!-- <p class="py-1 text-1xl">{desc}</p> -->
          <slot name="description" />

          <div class="card-actions justify-end">
            {
              tags &&
                tags.map((tag) => (
                  <a class="badge badge-outline">
                    {tag}
                  </a>
                ))
            }
          </div>
        </div>
      </div>
    </a>
    ) : (
      <label class="swap swap-flip">
    
        <!-- this hidden checkbox controls the state -->
        <input type="checkbox" />
        
        <div class="swap-off">
          <div class="hero-content flex-col md:flex-row">
            {
              img && (
                <Image
                  src={img}
                  width={750}
                  height={422}
                  format="webp"
                  alt={title}
                  class="max-w-full md:max-w-[13rem] rounded-lg"
                />
              )
            }
            <div class="grow w-full">
              <h1 class="text-xl font-bold">
                {title} 
                <rux-tooltip placement="right-start" message={message} delay="600">
                  <rux-button2>ğŸ”’</rux-button2>
                </rux-tooltip>
                {badge && <div class="badge badge-neutral mx-2">ğŸ•°ï¸ {badge}</div>}
              </h1>
              <slot name="description" />

              <div class="card-actions justify-end">
                {
                  tags &&
                    tags.map((tag) => (
                      <a class="badge badge-outline">
                        {tag}
                      </a>
                    ))
                }
              </div>
            </div>
          </div>  
        </div>
        <div class="swap-on flex items-center justify-center">
            <div class="p-4 py-30">
              Ouch!, It seems you missed the ğŸ”’.Please Go Back And Leave mouse on The ğŸ”’ ToolTip for more info.
            </div>
        </div>
      </label>
    )}
</div>

